{
  "name": "esig",
  "version": "0.0.1",
  "description": "create an app to consume rust-generated wasm packages",
  "main": "index.js",
  "bin": {
    "create-wasm-app": ".bin/create-wasm-app.js"
  },
  "scripts": {
    "build:dev": "npx webpack --config webpack.dev.js",
    "build:prod": "npx webpack --config webpack.prod.js",
    "build": "npm run build:prod",
    "serve:dev": "npx webpack serve --config webpack.dev.js",
    "serve": "npm run serve:dev",
    "lint": "npm run lint:styles && npm run lint:html && npm run lint:js",
    "lint:js": "npx eslint --ext .js",
    "lint:html": "npx eslint --ext .html",
    "lint:styles": "npx stylelint **/*.scss"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gitlab.com/f4b.io/esig.git"
  },
  "keywords": [
    "webassembly",
    "wasm",
    "rust",
    "webpack"
  ],
  "author": "Fabio Tea <iam@f4b.io>",
  "license": "(MIT OR Apache-2.0)",
  "bugs": {
    "url": "https://gitlab.com/f4b.io/esig/issues"
  },
  "homepage": "https://gitlab.com/f4b.io/esig#readme",
  "dependencies": {
    "esig": "file:../pkg"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.15.3",
    "@tailwindcss/forms": "^0.3.2",
    "@types/highlight.js": "^10.1.0",
    "autoprefixer": "^10.2.5",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^8.1.1",
    "css-loader": "^5.2.4",
    "eslint": "^7.26.0",
    "eslint-plugin-html": "^6.1.2",
    "eslint-plugin-import": "2.23.2",
    "eslint-plugin-php-markup": "^6.0.0",
    "eslint-plugin-unused-imports": "^1.1.1",
    "favicons": "^6.2.2",
    "favicons-webpack-plugin": "^5.0.2",
    "file-loader": "^6.2.0",
    "highlight.js": "^10.7.2",
    "html-webpack-plugin": "^5.3.1",
    "img-optimize-loader": "^1.0.7",
    "mini-css-extract-plugin": "^1.6.0",
    "postcss": "^8.2.15",
    "postcss-import": "^14.0.2",
    "postcss-loader": "^5.3.0",
    "postcss-preset-env": "^6.7.0",
    "sass": "^1.32.13",
    "sass-loader": "^11.1.1",
    "style-loader": "^2.0.0",
    "stylelint": "^13.13.1",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-scss": "^3.19.0",
    "tailwindcss": "^2.1.2",
    "webpack": "^5.37.0",
    "webpack-cli": "^4.7.0",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.7.3"
  }
}
